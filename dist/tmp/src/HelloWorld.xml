<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.mendix.widget.custom.helloWorld.HelloWorld" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>HelloWorld</name>
    <description>This shows Hello World through React</description>
    <icon />
    <properties>
        <property key="displayMessage" type="string" required="false" defaultValue="">
            <caption>Display Message</caption>
            <category>Appearance</category>
            <description>This will display a message set in the modeler</description>
        </property>
        <property key="messageAttribute" type="attribute">
            <caption>String Attribute</caption>
            <category>Data source</category>
            <description>Attribute String To Display</description>
            <attributeTypes>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
    </properties>
</widget>